			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const jsonData = pm.response.json();",
							"",
							"// storing the course name under the \"Javascript\" category in the environment variable",
							"jsonData.data.forEach(function (item) {",
							"    if (item.category === \"Javascript\") {",
							"        pm.environment.set(\"course\", item.course);",
							"    }",
							"});",
							"",
							"pm.test(\"Validates there is at least one Javascript course\", () => {",
							"    const javascriptCourses = jsonData.data.filter(item => item.category === \"Javascript\");",
							"    pm.expect(javascriptCourses).to.have.length.above(0);",
							"});",
							"",
							"pm.test(\"Validates the course name is Postman\", () => {",
							"    const javascriptCourses = jsonData.data.filter(item => item.category === \"Javascript\");",
							"    pm.expect(javascriptCourses[0].course).to.eql(\"Postman\");",
							"});",
							"",
							"pm.test(\"Validates the price of Javascript courses is greater than 0\", () => {",
							"    const javascriptCourses = jsonData.data.filter(item => item.category === \"Javascript\");",
							"    pm.expect(javascriptCourses[0].price).to.be.above(0);",
							"});",
							"",
							"pm.test(\"Validates that all courses have a defined price\", () => {",
							"    jsonData.data.forEach(item => {",
							"        pm.expect(item.price).to.not.be.null;",
							"        pm.expect(item.price).to.not.be.undefined;",
							"    });",
							"});",
							"",
							"pm.test(\"Validates all courses have a price greater than 0\", () => {",
							"    jsonData.data.forEach(item => {",
							"        pm.expect(item.price).to.be.above(0);",
							"    });",
							"});",
							"",
							"pm.test(\"Validates there are no duplicate courses\", () => {",
							"    const courseNames = jsonData.data.map(item => item.course); ",
							"    const uniqueCourseNames = [...new Set(courseNames)]; ",
							"    pm.expect(uniqueCourseNames.length).to.eql(3);  ",
							"});",
							"",
							"",
							"",
							""
